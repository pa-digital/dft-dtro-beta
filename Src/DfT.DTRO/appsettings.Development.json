{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5432;Database=DTRO;User Id=postgres;Password=admin;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFramework.Core": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[Time: {Timestamp:dd-MM-yyyy HH:mm:ss} | Level: {Level:u3} | Source: {SourceContext} | Message: {Message:lj} | Exception: {Exception}]{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/API-logs-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
        }
      }
    ]
  },
  "FeatureManagement": {
    "DtroRead": true,
    "DtroWrite": true,
    "SchemasRead": true,
    "SchemaWrite": true
  },
  "RequestCorrelation": {
    "HeaderName": "X-Correlation-ID",
    "LogPropertyName": "correlationId"
  }
}
